<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff3f3f3">

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_name"
        android:text="Vak"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_ects"
        android:text="EC&apos;s"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignTop="@+id/tx_name"
        android:layout_toRightOf="@+id/tx_name"
        android:layout_toEndOf="@+id/tx_name" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_grade"
        android:text="Cijfer"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignTop="@+id/tx_ects"
        android:layout_toRightOf="@+id/tx_ects"
        android:layout_toEndOf="@+id/tx_ects" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_period"
        android:text="Periode"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignTop="@+id/tx_grade"
        android:layout_toRightOf="@+id/tx_grade"
        android:layout_toEndOf="@+id/tx_grade" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview"
        android:layout_below="@+id/tx_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>