<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff3f3f3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get JSON"
        android:id="@+id/getJson"
        android:onClick="getJSON"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parse JSON"
        android:id="@+id/parseJson"
        android:onClick="parseJSON"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tx_ects"
        android:layout_alignEnd="@+id/tx_ects" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_name"
        android:text="Naam"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/getJson"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_ects"
        android:text="Ects"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignTop="@+id/tx_name"
        android:layout_toRightOf="@+id/tx_name"
        android:layout_toEndOf="@+id/tx_name" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_grade"
        android:text="Grade"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignTop="@+id/tx_ects"
        android:layout_toRightOf="@+id/tx_ects"
        android:layout_toEndOf="@+id/tx_ects" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_period"
        android:text="Period"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignTop="@+id/tx_grade"
        android:layout_toRightOf="@+id/tx_grade"
        android:layout_toEndOf="@+id/tx_grade" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview"
        android:layout_below="@+id/tx_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>